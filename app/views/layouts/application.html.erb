<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<h1>Blog</h1>
		<nav>
			<ul>
				<li>
					<% if signed_in? %>
						<%= link_to 'Log out', logout_path, method: :delete %>
					<% else %>
						<%= link_to 'Log in', login_path %>
					<% end %>
				</li>
			</ul>
		</nav>
		<div class="notice">
			<%= notice %>
		</div>
		<div class="error">
			<%= flash[:error] %>
		</div>
	</header>
<%= yield %>

</body>
</html>
