<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'header' %>
	<%= render 'navbar' %>
	<div class="notice">
		<%= notice %>
	</div>
	<div class="error">
		<%= flash[:error] %>
	</div>

	<%= yield %>

</body>
</html>
