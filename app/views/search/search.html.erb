<% content_for :title, 'Search' %>
<h1>Search</h1>
<%= form_tag '/search', method: 'get' do %>
	<%= text_field_tag :q %>
	<%= submit_tag 'Search' %>
<% end %>
<br>
<% if params[:q] %>
	<% if @results.empty? %>
		No results
	<% else %>
		<p>Search results for: <strong><%= params[:q] %></strong></p>
		<% @results.each do |result| %>
			<h2><%= link_to result.title, article_path(result) %></h2>
			<p><%= truncate result.text, length: 200 %></p>
		<% end %>
	<% end %>
<% end %>
