<%= form_for @article, html: { role: 'form' } do |f| %>
	<div class="form-group">
		<%= f.label :title, class: 'control-label' %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :text, class: 'control-label' %>
		<%= f.text_area :text, rows: 10, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :categories, class: 'control-label' %>
		<%= collection_select(:article, :categories, Category.all, :id, :name,
													{ selected: @article.categories.map(&:id) },
													multiple: true, class: 'form-control') %>
	</div>
	<div class="form-group">
		<div class="radio-inline">
			<%= f.radio_button :status, :draft %>
			<%= f.label :status, 'Draft', value: :draft %>
		</div>
		<div class="radio-inline">
			<%= f.radio_button :status, :published %>
			<%= f.label :status, 'Published', value: :published %>
		</div>
	</div>
	
	<%= f.submit submit_text, class: 'btn btn-default' %>
	<%= link_to 'Cancel', :back, class: 'cancel-link' %>
<% end %>

