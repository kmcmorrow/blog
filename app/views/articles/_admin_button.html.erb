<div class="btn-group">
  <%= link_to link_text, publish_article_path(article), method: :put, class: "btn btn-sm #{button_style}", type: "button" %>
	<button type="button" class="btn btn-sm <%= button_style %> dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
		<span class="sr-only">Toggle Dropdown</span>
  </button>
	<ul class="dropdown-menu" role="menu">
		<li><%= link_to 'Edit article', edit_article_path(article) %></li>
		<li><%= link_to 'Delete article', article, method: :delete,
    data: { confirm: 'Are you sure?' } %></li>
	</ul>
</div>

